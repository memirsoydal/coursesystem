@model IEnumerable<CourseSystem.Models.ViewModels.DersViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ders Dashboard</h1>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ders.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SinifName)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ders.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SinifName)
            </td>
            <td>
            <a asp-action="Lectures" asp-route-id="@item.Ders.Id">Lectures</a>
            </td>
        </tr>
    }
    </tbody>
</table>